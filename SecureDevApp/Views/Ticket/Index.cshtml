@model IEnumerable<SecureDevApp.Models.Ticket>

@{
    ViewBag.Title = "Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tickets Page</h2>

@{
    if (this.User.Identity.IsAuthenticated)
    {
        if (this.User.IsInRole("CanManageTickets"))
        {
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.ActionLink("Ticket Number", "Index", new { sortOrder = ViewBag.IdSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionSortParm })
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketDescription)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.ActionLink("Ticket Number", "Index", new { sortOrder = ViewBag.IdSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionSortParm })
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketDescription)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        </td>
                    </tr>
                }
            </table>
        }

    }
}


